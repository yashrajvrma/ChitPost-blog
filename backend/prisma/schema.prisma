generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  firstName    String
  lastName     String
  email        String @unique
  password     String
  profileColor String @default("#ff2800")
  post         Post[]
}

model Post {
  id          String  @id @default(uuid())
  title       String
  description String
  published   Boolean @default(false)
  author      User    @relation(fields: [authorId], references: [id])
  authorId    String
}
